generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  notes    Note[]
}

enum NoteLayout {
  PostLayout //默认
  PostBanner //带 banner
  PostSimple //简约模式
}

model Tags {
  id      String      @id @default(cuid())
  tagName String
  notes   TagOnNote[]
}

model Note {
  id           Int         @id @default(autoincrement())
  title        String      @unique
  date         DateTime    @default(now()) @map("createdAt")
  lastmod      DateTime?   @map("updatedAt")
  draft        Boolean     @default(false)
  summary      String?
  images       String[]
  authors      String[]
  author       User        @relation(fields: [authorId], references: [id])
  authorId     String
  layout       NoteLayout  @default(PostLayout)
  canonicalUrl String?
  tags         TagOnNote[]
}

model TagOnNote {
  noteId     Int
  note       Note     @relation(fields: [noteId], references: [id])
  tagId      String
  tag        Tags     @relation(fields: [tagId], references: [id])
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([noteId, tagId])
}
