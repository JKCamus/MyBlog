generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  notes    Note[]
}

model Tags {
  id      String      @id @default(cuid())
  tagName String
  notes   TagOnNote[]
}

model Note {
  title        String
  date         DateTime    @default(now()) @map("createdAt")
  lastmod      DateTime?   @map("updatedAt")
  authorId     String
  authors      String[]
  canonicalUrl String?
  draft        Boolean     @default(false)
  images       String[]
  layout       NoteLayout  @default(PostLayout)
  summary      String?
  id           Int         @id @default(autoincrement())
  author       User        @relation(fields: [authorId], references: [id])
  tags         TagOnNote[]
  filepath     String
}

model TagOnNote {
  noteId     Int
  tagId      String
  assignedAt DateTime @default(now())
  assignedBy String
  note       Note     @relation(fields: [noteId], references: [id])
  tag        Tags     @relation(fields: [tagId], references: [id])

  @@id([noteId, tagId])
}

enum NoteLayout {
  PostLayout
  PostBanner
  PostSimple
}
